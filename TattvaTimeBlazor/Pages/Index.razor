@code{
    TimeSpan SubTattva => TimeSpan.FromSeconds(Tattva.CICLO_SUBTATTVA);
    DateTime TimeInit => new DateTime(2021, 7, 15, 10, 59, 41);
    int Total => 12*Enum.GetValues(typeof(Tattva.Name)).Length* Enum.GetValues(typeof(Tattva.Name)).Length;

    DateTime GetTime(int pos,int segundos=0) => TimeInit + (SubTattva * pos)+TimeSpan.FromSeconds(segundos);
}